<%- include('../partials/head') %>


<div class="d-flex">
    <div class="card text-white bg-primary m-3">
        <div class="card-header">
            <h4>Name: <%= user.name %></h4>
        </div>
        <div class="card-body">
            <h5 class="card-title">Vet name: <%= user.vetName %> </h5>
            <p class="card-text">
                <h6>Address: <%= user.streetAdd %> <%= user.street %> / <%= user.city %> <%= user.zip %></h6>
            </p>
        </div>
    </div>
</div>

    <div class="d-flex">
        <div class="card text-white bg-info m-3">
            <div class="card-header">Vet info</div>
            <div class="card-body">
                <h4 class="card-title"><%= user.vetName %></h4>
            </div>
        </div>
    </div>


    <% user.dogs.forEach(function(d) { %>
    <div class="d-flex">
        <div class="card border-primary m-3" style="width: 20rem;">
            <div class="card-header">
                <h5><i class="material-icons md-72">pets</i> <%= d.dogName %></h5>
            </div>
            <div class="card-body">
                <h5 class="card-title"> <%= d.breed %></h5>
                <h6>
                    <p class="card-text"><%= d.notes %></p>
                </h6>
            </div>
        </div>
    </div>

    <% }); %>


