<%- include('../../partials/head') %>

<form action="/user/<%= user._id %>/reservations" method="POST">
    <div class="form-row">
        <div class="form-group col-md-6">
                <label for="type">Type:</label>
            <select name="type" class="form-control" required>
                <option value="grooming">Grooming</option>
                <option value="daycare">Daycare</option>
                <option value="boarding">Boarding</option>
            </select>
        </div>
        <div class="form-group col-md-6">
                <label for="dog">Dog:</label>
             <select name="dog" class="form-control" required>
                <% user.dogs.forEach(function(d) { %>
                <option><%= d.dogName %></option>
                <% }) %>
            </select>
        </div>
    </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                    <label for="checkIn">Check-in:</label>
                     <input type="date" name="checkIn" id="checkIn" class="white-text form-control" min="2019-12-01" max="2020-12-01"
                    required>
            </div>
            <div class="form-group col-md-6">
                    <label for="checkOut">Check-out:</label>
                    <input type="date" name="checkOut" id="checkOut" class="white-text form-control" min="2019-12-01" max="2020-12-01"
                    required>
            </div>
        </div>

        <div class="form-row">
                <div class="form-group col">
                        <label for="notes">Any notes?:</label>
                        <textarea name="notes" class="white-text form-control"></textarea>
            </div>
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Add reservation</button>
</form>


<%- include('../../partials/footer') %>
